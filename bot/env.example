# NTQQ / OneBot 适配器配置（NapCatQQ 默认示例端口为 6090）
NTQQ_WS_URL=ws://127.0.0.1:6090/onebot/v11/ws
NTQQ_HTTP_URL=http://127.0.0.1:6090
NTQQ_ACCESS_TOKEN=

# 机器人配置
BOT_NICKNAME=体育预订助手
BOT_COMMAND_PREFIX=!

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# 数据库配置（可选）
DATABASE_URL=sqlite:///data/bot.db

# 服务层配置
SERVICE_BASE_URL=https://sports.sjtu.edu.cn
SERVICE_AUTH_COOKIE=your_cookie_here

# 监控配置
DEFAULT_MONITOR_INTERVAL=240
DEFAULT_AUTO_BOOK=false

# 定时任务配置
DEFAULT_SCHEDULE_HOUR=8
DEFAULT_SCHEDULE_MINUTE=0
