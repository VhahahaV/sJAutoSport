# 反向 WebSocket 配置（NapCat 主动连接 NoneBot）
# NoneBot 作为 WS 服务端，NapCat 作为客户端连接
DRIVER=~fastapi
HOST=0.0.0.0
PORT=8080
ONEBOT_ACCESS_TOKEN=123456

# 关闭 HTTP 上报服务（反向 WS 不需要）
BOT_HTTP_SERVER_ENABLED=false

# NapCat HTTP API 配置（用于调用 NapCat 的 HTTP 接口）
NTQQ_HTTP_URL=http://127.0.0.1:3000
NTQQ_ACCESS_TOKEN=123456

# 机器人配置
BOT_NICKNAME=体育预订助手
BOT_COMMAND_PREFIX=!

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=logs/bot.log

# 数据库配置（可选）
DATABASE_URL=sqlite:///data/bot.db

# 服务层配置
SERVICE_BASE_URL=https://sports.sjtu.edu.cn
SERVICE_AUTH_COOKIE=your_cookie_here

# 监控配置
DEFAULT_MONITOR_INTERVAL=240
DEFAULT_AUTO_BOOK=false

# 定时任务配置
DEFAULT_SCHEDULE_HOUR=8
DEFAULT_SCHEDULE_MINUTE=0

# 热加载配置
HOT_RELOAD=false
